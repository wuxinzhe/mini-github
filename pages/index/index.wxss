.search-bar{
  height: 100rpx;
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-input{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border: 1rpx solid #d1d5da;
  font-size: 32rpx;
  color: #24292e;
  background-color: #ffffff;
  border-radius: 6rpx;
  height: 68rpx;
  width: 718rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(27,31,35,.075);
  padding: 0 16rpx;
  box-sizing: border-box;
  outline: none;
}

.search-tab{
  border-top: 2rpx solid #e1e4e8;
  border-bottom: 2rpx solid #e1e4e8;
  height: 110rpx;
  width: 750rpx;
}